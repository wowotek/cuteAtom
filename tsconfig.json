{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "jsx": "preserve",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "outDir": "./dist/"
  }
}